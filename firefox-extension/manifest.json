{
    "manifest_version": 2,
    "name": "Official slog.link Extension",
    "version": "1.0",
    "description": "Easy link shortener based from https://slog.link/. Shows existing slog.links and copies to clipboard (click green logo). Creates new slog.links (click red logo).",
    "homepage_url": "https://slog.link",
    "icons": {
      "48": "icons/slog-48.png"
    },
  
    "permissions": [
      "tabs",
      "activeTab",
      "clipboardWrite",
      "contextMenus",
      "https://slog.link/translate_link"

    ],
  
    "browser_action": {
      "default_icon": "icons/slog-32.png",
      "default_title": "slog.link"
    },

    "background": {
        "scripts": ["background.js"]
    }
}